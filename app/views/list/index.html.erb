<!DOCTYPE html>
<html>
<head>
	<title>ListIt. Make some lists.</title>
</head>
<body class='theBody'>
	<div class='container'>
		<div class='row'>
			<h2 class='siteTitle'>ListIt</h2>
		</div>
		<div class='row siteFont newLink'>
			<%= link_to('Add new list', new_list_path) %>
		</div>	
		<% @List.each do |l| %>
		<div class='row theList gutter-14'>
	   		<div class="col-xs-3 col-sm-2 col-md-1 listVotes">
	   			<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
	   			<span><%= l.votes %></span>
	   			<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
	   		</div>
			<div class="col-xs-6 listTitle">
				<p><%= link_to(l.title, list_path(l)) %></p>
				<p class='listInfo'>Submitted <%= time_ago_in_words(l.created_at) %> ago</p>
			</div>
		</div>
		<% end %>	
	</div>
</body>
</html>